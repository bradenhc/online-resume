{
    "compilerOptions": {
        "target": "es2017",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "jsx": "react",
        "baseUrl": "./",
        "checkJs": true,
        "paths": {
            "styles/*": ["src/styles/*"],
            "components/*": ["src/components/*"],
            "state/*": ["src/state/*"],
            "api/*": ["src/api/*"],
            "App": ["src/App"],
            "app.config": ["src/app.config.js"]
        }
    },
    "exclude": ["node_modules", "dist"]
}
